<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="tools.certification.latency.auto.R" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:textColor="#252525"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableStart="@{R.drawable.ic_play}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hi_bixby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:textColor="#252525"
            android:visibility="gone"
            app:drawableStart="@{R.drawable.ic_speaker}"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/ting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:textColor="#252525"
            android:visibility="gone"
            app:drawableStart="@{R.drawable.ic_bixby}"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/hi_bixby" />

        <TextView
            android:id="@+id/hi_latency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:textColor="#252525"
            android:visibility="gone"
            app:drawableStart="@{R.drawable.ic_timer}"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/ting" />

        <TextView
            android:id="@+id/request"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:textColor="#252525"
            android:visibility="gone"
            app:drawableStart="@{R.drawable.ic_speaker}"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/hi_latency" />

        <TextView
            android:id="@+id/response"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:textColor="#252525"
            android:visibility="gone"
            app:drawableStart="@{R.drawable.ic_bixby}"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/request" />

        <TextView
            android:id="@+id/request_latency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:textColor="#252525"
            android:visibility="gone"
            app:drawableStart="@{R.drawable.ic_timer}"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/response" />

        <TextView
            android:id="@+id/accuracy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:textColor="#252525"
            android:visibility="gone"
            app:drawableStart="@{R.drawable.ic_accuracy}"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/request_latency" />

        <TextView
            android:id="@+id/error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:paddingVertical="8dp"
            android:textColor="#252525"
            android:visibility="gone"
            app:drawableStart="@{R.drawable.ic_warning}"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/accuracy" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
