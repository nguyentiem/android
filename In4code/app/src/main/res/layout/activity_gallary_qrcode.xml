<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.qrgallary.GallaryQRCodeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?base_color"
            android:theme="@style/Theme.In4Code"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_scan"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/Theme.In4Code">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?base_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/toolbar_back_scan"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/back"
                        android:background="@drawable/ani_item_click_background"
                        app:tint="?titlecolor" />

                    <TextView
                        android:id="@+id/title_toolbar"
                        android:layout_width="281dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Gallary"
                        android:textColor="?titlecolor"
                        android:textSize="20sp"
                        android:layout_marginEnd="15dp"
                        android:textStyle="bold" />


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/image_scan"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_scan"
                            android:layout_marginEnd="20dp"
                            app:tint="?titlecolor" />


                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/gallary_layout"
            android:layout_height="match_parent"
            android:background="?background"/>
        <!--             nahy vao scan camera -->
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>